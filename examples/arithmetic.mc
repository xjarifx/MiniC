// Arithmetic Operations Example
// Demonstrates basic arithmetic operators

int a;
int b;
int sum;
int diff;
int product;
int quotient;
int remainder;

a = 15;
b = 4;

// Basic arithmetic
sum = a + b;
diff = a - b;
product = a * b;
quotient = a / b;
remainder = a % b;

print(sum);       // 19
print(diff);      // 11
print(product);   // 60
print(quotient);  // 3
print(remainder); // 3
